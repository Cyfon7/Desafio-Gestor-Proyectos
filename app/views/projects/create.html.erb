<div class="container mt-5">
    <% if @project.errors.any? %>
        <div id="error_explanation">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading"><strong>Oh boy!</strong> something went wrong</h4>
                <p><%= pluralize(@project.errors.count, "error") %> prohibited this project from being created:</p>
                <hr>
                <ul>
                    <% @project.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% else %>
        <div class="alert alert-success text-center" role="alert">
            <h4 class="alert-heading">Project created successfully !!!</h4>
        </div>    
    <% end %>
    <%= link_to "Back to Dashboard", root_path %>
</div>

